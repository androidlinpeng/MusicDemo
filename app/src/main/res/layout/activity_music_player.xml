<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/icon_album_dark" />


    <RelativeLayout
        android:id="@+id/rl_musicname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/panel_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_panel_back" />

        <ImageButton
            android:id="@+id/music_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:padding="6dp"
            android:src="@drawable/ic_menu_share" />

        <TextView
            android:id="@+id/music_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:text="222222"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_musicname"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/artist_Left"
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/artist"
            android:background="@color/bg_activity_base" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <View
            android:id="@+id/artist_Right"
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/artist"
            android:background="@color/bg_activity_base" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_test"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/bottom_time"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_album_default" />

    <LinearLayout
        android:id="@+id/bottom_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/bottom"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:textColor="#e5ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dip"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:textColor="#e5ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/play"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_skip_previous_white_36dp" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_play_white_36dp" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/play"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_skip_next_white_36dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_pattern"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:onClick="onClick"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:id="@+id/circulation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_list_repeat"
            android:gravity="center" />

        <ImageView
            android:id="@+id/single"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_one_shot"
            android:visibility="gone"
            android:gravity="center" />

        <ImageView
            android:id="@+id/random"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_shuffle_white_36dp"
            android:gravity="center"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
