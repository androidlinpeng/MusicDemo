<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lrc_view">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_test"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_album_default" />

    </RelativeLayout>

    <me.wcy.lrcview.LrcView
        android:id="@+id/lrc_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        lrc:lrcAnimationDuration="100"
        lrc:lrcCurrentTextColor="@color/colorPrimary"
        lrc:lrcDividerHeight="24dp"
        lrc:lrcNormalTextColor="@color/whiteShallow"
        lrc:lrcTextSize="@dimen/text_size_lrc" />



</RelativeLayout>